---
import { SKILLS } from "@data/skills";
import type { Skill } from "@interfaces/skill";
import { Icon } from "astro-icon/components";
import "./skill.css";
---

<ul class="technologies">
  {
    SKILLS.map((link: Skill) => (
      <li class="technology">
        <a
          href={link.href}
          class="technology-link"
          target="_blank"
          title={link.text}
        >
          <Icon name={link.icon} class="technology-icon" />
        </a>
        <span class="technology-text">{link.text}</span>
      </li>
    ))
  }
</ul>
