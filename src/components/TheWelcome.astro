---
import Contact from "./Contact.astro";
---

<style>
	h1 {
		text-align: center;
		background: linear-gradient(
			to right,
			#a855f7 10%,
			#06a2f1 40% 60%,
			#a855f7 90%
		);
		background-size: 200% auto;
		background-clip: text;
		color: transparent;
		-webkit-background-clip: text;
		animation: shine 6s linear infinite;
		background-image: linear-gradient(
			to right,
			rgb(168, 85, 247) 10%,
			rgb(6, 162, 241) 40% 60%,
			rgb(168, 85, 247) 90%
		);
		background-color: initial;
	}

	@keyframes shine {
		100% {
			background-position: 200% center;
		}
	}
</style>

<div class="font-heading text-center lg:text-left">
	<h1
		class="relative -top-3 text-4xl md:text-5xl bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-blue-500"
	>
		Desarrollador Backend
	</h1>
	<h2 class="text-3xl md:text-4xl">Pedro Purihuaman</h2>

	<Contact />
</div>
