---
import {Icon} from "astro-icon/components";

interface Props {
  href: string;
  iconId: string;
  linkClass: SocialNetwork;
  title: string;
}

type SocialNetwork = "linkedin" | "github" | "cv" | "default";

const classes = {
  "linkedin": "text-zinc-50 bg-zinc-700 hover:bg-zinc-800 active:bg-zinc-800 focus-visible:ring-zinc-400",
  "github": "text-zinc-50 bg-zinc-700 hover:bg-zinc-800 active:bg-zinc-800 focus-visible:ring-zinc-400",
  "cv": "text-zinc-50 bg-purple-500 hover:bg-purple-600 active:bg-purple-600 focus-visible:ring-purple-400",
  "default": "text-zinc-50 bg-zinc-700 hover:bg-zinc-800 active:bg-zinc-800 focus-visible:ring-zinc-400"
};

const classStyle = classes[Astro.props.linkClass];

const {href, iconId, title} = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener"
  class="link_ inline-flex justify-center items-center gap-2 h-10 text-sm py-2 px-4 whitespace-nowrap rounded focus-visible:ring transition-all duration-300"
  class:list={classStyle}
>
  <span class="link-title">{title}</span>
  <Icon name={iconId} class="w-5 h-5"/>
</a>
