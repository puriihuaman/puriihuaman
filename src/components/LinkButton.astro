---
import { Icon } from "astro-icon/components";

interface Props {
	href: string;
	tech: string;
	iconId: string;
	iconSize: string;
	linkClass: string;
}

const PATH_IMAGE = "/assets/icons";

const { href, tech, iconId, iconSize, linkClass } = Astro.props;
---

<style lang="scss">
	.link {
		column-gap: var(--space-2);
		color: var(--gray-50);
		fill: currentColor;

		& svg {
			width: var(--sizes-5);
			height: var(--sizes-5);
		}
	}
	.linkedin {
		--color-ring: var(--persian-blue-500);
		color: var(--white);
		background-color: var(--persian-blue-500);
		border-color: var(--persian-blue-500);
		&:hover {
			--color-ring: var(--persian-blue-600);
			color: var(--persian-blue-600);
			background-color: transparent;
		}
	}
	.github {
		--color-ring: var(--gray-800);
		background-color: var(--gray-800);
		color: var(--gray-50);
		border-color: var(--gray-800);
		&:hover {
			color: var(--gray-800);
			background-color: transparent;
		}
	}
</style>

<a
	href={href}
	target="_blank"
	rel="noopener"
	class:list={"button link " + linkClass}
>
	<Icon name={iconId} />
	<span>{tech}</span>
</a>
