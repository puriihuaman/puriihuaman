---
import { LINKS_LIST } from "@data/links-list";
import type { ILink } from "@interfaces/ILink";

const { pathname } = Astro.url;
---

<style>
	.navegation {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-wrap: wrap;
		text-align: center;
		width: var(--sizes-full);
		max-width: fit-content;
		margin-left: auto;
		margin-right: auto;
		margin-top: var(--space-8);

		@media (width >= 1024px) {
			text-align: left;
			margin-left: auto;
			margin-top: var(--space-4);
			padding: var(--space-4) 0;
		}
	}
	.navegation-item {
		flex: 1;
		display: flex;
		justify-content: center;
		align-items: center;
		padding: var(--space-2) var(--space-4);
		transition: var(--transition-property-common),
			var(--transition-easing-ease-in-out), var(--transition-duration-300);
		&:not(:first-child) {
			border-left: 1px solid var(--gray-800);
		}
		&:hover,
		&:active {
			color: var(--persian-blue-500);
			text-decoration: underline;
			color: var(--persian-blue-500);
		}
		&.active {
			color: var(--persian-blue-500);
			font-family: var(--heading-font);
		}
	}
</style>

<nav class="navegation">
	{
		LINKS_LIST.map((link: ILink): any => (
			<a
				href={link.href}
				class={`navegation-item ${pathname === link.pathname ? "active" : ""}`}
				transition:animate="fade"
			>
				{link.name}
			</a>
		))
	}
</nav>
