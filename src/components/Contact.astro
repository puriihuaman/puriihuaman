---
interface Props {
  otherClass?: boolean;
}

import LinkButton from "./LinkButton.astro";
---

<style>
  .contact {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    gap: var(--space-1);
    text-transform: capitalize;
    font-family: var(--main-font);
  }
</style>

<div class="contact contact-header">
  <LinkButton
    href="https://www.linkedin.com/in/puriihuaman/"
    iconId="linkedin"
    linkClass="linkedin"
  />

  <LinkButton
    href="https://github.com/puriihuaman"
    iconId="github"
    linkClass="github"
  />
</div>
