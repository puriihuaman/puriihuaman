---
const imageWebp = "/assets/images/webp/puriihuaman.webp";
const imagePng = "/assets/images/puriihuaman.png";
---

<style>
	.picture {
		display: block;
		max-width: var(--sizes-full);
		padding: var(--space-4) 0;
	}

	.image {
		margin-left: auto;
		margin-right: auto;
		margin-bottom: var(--space-8);
		width: var(--sizes-40);
		height: var(--sizes-40);
		border-radius: var(--radii-full);
		aspect-ratio: 1 / 1;
		object-fit: cover;
		object-position: center;

		@media (prefers-color-scheme: dark) {
			mask-image: linear-gradient(var(--gray-50) 60%, transparent);
		}
	}
</style>

<picture class="picture">
	<source srcset={imageWebp} type="image/webp" class="image" />

	<img
		class="image"
		alt="Foto Pedro Purihuaman"
		src={imagePng}
		width="125"
		height="125"
		decoding="async"
		loading="lazy"
	/>
</picture>
