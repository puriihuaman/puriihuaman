---
const imageWebp = "/assets/images/webp/puriihuaman.webp";
const imagePng = "/assets/images/puriihuaman.png";
---

<picture class="w-full overflow-hidden rounded-2xl md:w-1/5">
	<source srcset={imageWebp} type="image/webp" class="h-full w-full object-cover" />

	<img
		class="h-full w-full object-cover mask-b-from-20%"
		alt="Foto Pedro Purihuaman"
		src={imagePng}
		width="125"
		height="125"
		decoding="async"
		loading="lazy"
	/>
</picture>
