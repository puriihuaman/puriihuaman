---
type IconSize = "xs" | "sm" | "md" | "lg";

const iconSizes: Record<IconSize, string> = {
	xs: "xs",
	sm: "sm",
	md: "md",
	lg: "lg",
};

interface Props {
	iconID: string;
	iconSize?: IconSize;
}

const path = "/assets/icons/svg-icons.svg#";

const { iconID, iconSize = "sm" } = Astro.props;

const sizeClass: string = iconSizes[iconSize] || iconSizes["sm"];
---

<style>
	.icon {
		--size: var(--sizes-5);
		display: inline-flex;
		justify-content: center;
		align-items: center;
		padding: 0;
		appearance: none;
		width: var(--sizes-min);
		height: var(--sizes-min);
		/* flex justify-center items-center */

		svg {
			display: block;
			color: currentColor;
			user-select: none;
			pointer-events: none;
			width: var(--size);
			height: var(--size);
		}

		& .xs {
			--size: var(--sizes-5);
			/* w-5 h-5 */
		}
		& .sm {
			--size: var(--sizes-7);
			/* w-7 h-7 */
		}
		& .md {
			--size: var(--sizes-9);
			/* w-9 h-9 */
		}
		& .lg {
			--size: var(--sizes-12);
			/* w-12 h-12 */
		}
	}
</style>

<span class="icon">
	<svg class={`${sizeClass}`}>
		<use href={path + iconID}></use>
	</svg>
</span>
