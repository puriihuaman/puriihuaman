---
import Avatar from "./Avatar.astro";
import Contact from "./Contact.astro";
---

<style>
  .hero-container {
    display: flex;
    flex-direction: row;
    gap: var(--space-1);
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    gap: var(--space-3);
  }
  .hero-title {
    font-size: var(--fontSizes-2xl);
    font-weight: bold;
    font-family: var(--heading-font);
    text-transform: uppercase;
  }
  .hero-text {
    font-size: var(--fontSizes-md);
    color: var(--gray-700);
  }

  .hero-country {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    color: var(--gray-700);
    font-size: var(--fontSizes-sm);
    text-wrap: nowrap;
    &:hover {
      text-decoration: underline;
    }
    & svg {
      width: var(--sizes-4);
      height: var(--sizes-4);
    }
  }
</style>

<section class="hero">
  <div class="container">
    <section class="hero-container">
      <div class="hero-content">
        <div>
          <h1 class="hero-title">Pedro Purihuaman</h1>
          <p class="hero-text">Desarrollador Backend</p>
        </div>

        <Contact />

        <a
          href="https://google.com/maps/place/Lima,+PE"
          target="_blank"
          class="hero-country"
        >
          <svg
            width="1em"
            height="1em"
            aria-label="globe-icon"
            data-icon="mdi:globe"
          >
            <symbol id="ai:mdi:globe" viewBox="0 0 24 24"
              ><path
                fill="currentColor"
                d="M17.9 17.39c-.26-.8-1.01-1.39-1.9-1.39h-1v-3a1 1 0 0 0-1-1H8v-2h2a1 1 0 0 0 1-1V7h2a2 2 0 0 0 2-2v-.41a7.984 7.984 0 0 1 2.9 12.8M11 19.93c-3.95-.49-7-3.85-7-7.93c0-.62.08-1.22.21-1.79L9 15v1a2 2 0 0 0 2 2m1-16A10 10 0 0 0 2 12a10 10 0 0 0 10 10a10 10 0 0 0 10-10A10 10 0 0 0 12 2"
                data-darkreader-inline-fill=""
                style="--darkreader-inline-fill: currentColor;"></path></symbol
            ><use href="#ai:mdi:globe"></use>
          </svg> Lima, Per√∫
        </a>
      </div>

      <Avatar />
    </section>
  </div>
</section>
