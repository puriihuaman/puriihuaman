---
import Skills from "@components/Skills.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import "./_index.css";

const content = await import(`@markdown/about-me.md`);

const { Content } = content;

const title = "Puriihuaman";
const description = "Puriihuaman - Portafolio personal";
---

<BaseLayout title={title} description={description}>
	<main>
		<section class="about">
			<Content title={title} />

			<article class="card">
				<div class="card-icon">⚙</div>

				<h3>Tecnologías</h3>
				<Skills />
			</article>
		</section>
	</main>
</BaseLayout>
