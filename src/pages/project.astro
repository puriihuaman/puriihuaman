---
import { Projects } from "@components/Projects";
import Layout from "@layouts/Layout.astro";
---

<style>
	.project {
		padding-top: var(--space-8);

		@media (width >= 1024px) {
			min-height: 100vh;
			display: flex;
			justify-content: center;
			flex-direction: column;
			padding: 0;
		}
		/* pt-8 lg:min-h-screen lg:flex lg:justify-center lg:flex-col lg:p-0 */
	}

	.header {
		border-bottom: 1px solid var(--gray-800);
		padding-bottom: var(--space-2);
		/* border-b border-slate-800 pb-1 */
	}

	.title {
		font-family: var(--heading-font);
		font-size: var(--fontSizes-2xl);

		@media (width >= 768px) {
			font-size: var(--fontSizes-3xl);
		}
		@media (width >= 1024px) {
			font-size: var(--fontSizes-4xl);
		}
		/* font-heading text-2xl md:text-3xl lg:text-4xl */
	}

	.projects {
		display: flex;
		flex-direction: column;
		row-gap: var(--space-8);
		padding-top: var(--space-8);
		width: var(--sizes-full);
		/* flex flex-col gap-8 pt-8 w-full */
	}
</style>

<Layout title="Proyectos - Puriihuaman">
	<main class="project">
		<div class="header">
			<h2 class="title">Proyectos</h2>
		</div>

		<div class="projects">
			<!-- Projects -->
			<Projects client:load />
		</div>
	</main>
</Layout>
