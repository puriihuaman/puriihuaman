---
import ServiceCard from '@components/ServiceCard.astro';
import { services } from '@data/services-list';
import type { IService } from '@interfaces/IService';
import Layout from '@layouts/Layout.astro';
---

<Layout title="Servicios - Puriihuaman">
	<main>
		<section class="_service py-8">
			<div class="">
				<h2
					class="_service__title font-heading text-2xl border-b border-slate-800 md:text-3xl lg:text-4xl"
				>
					Servicios
				</h2>

				<div
					class="_service__services mt-8 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-1"
				>
					{
						services.map((service: IService): any => (
							<ServiceCard service={service} />
						))
					}
				</div>
			</div>
		</section>
	</main>
</Layout>
