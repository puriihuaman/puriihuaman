---
import ServiceCard from "@components/ServiceCard.astro";
import { services } from "@data/services-list";
import type { IService } from "@interfaces/IService";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Servicios - Puriihuaman">
	<main>
		<section class="py-8">
			<div>
				<div class="border-b border-slate-800 pb-1">
					<h2 class="font-heading text-2xl md:text-3xl lg:text-4xl">
						Servicios
					</h2>
				</div>

				<div class="mt-8 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-1">
					{
						services.map((service: IService): any => (
							<ServiceCard service={service} />
						))
					}
				</div>
			</div>
		</section>
	</main>
</Layout>
