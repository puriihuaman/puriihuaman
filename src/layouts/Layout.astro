---
import Header from "@components/Header.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
	lang="es"
	class="font-sans dark text-slate-50 bg-gradient-to-b from-slate-900 to-slate-950"
	transition:animate="initial"
>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="icon"
			type="image/svg+xml"
			href="/assets/icons/puriihuaman.png"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>

	<body
		class="min-h-screen max-w-7xl mx-auto p-8 lg:grid lg:grid-cols-2 lg:items-center lg:py-0"
	>
		<Header />

		<slot />

		<style is:global lang="scss">
			@import "@assets/scss/styles.scss";
		</style>
	</body>
</html>
